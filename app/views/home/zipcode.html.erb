<div class="jumbotron <%= @api_color %>">
    <h1 class="display-4"><%= @final_output %></h1>
    <p class="lead">This is the current ozone air quality readout for 
        <% if @zip_query != "Please enter a zipcode" %>
            <%= @zip_query %> zipcode.
        <% else %>
            <%= "Unknown Zipcode" %>
        <% end %> 
        .</p>
    <hr class="my-4">
    <p><%= @api_description %></p>
</div>
